@model ABCBankingApplication.Models.ViewModels.AddressViewModel

<div class="row">
    <div class="col-md-12">
        <div id="alertMsg" class="alert alert-danger alert-dismissible" style="display: none;">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Failed!</strong> Passwords do not match. Please try again.
        </div>
        <section id="loginForm">
            @using (Html.BeginForm("ChangeAddress", "AccountSettings", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h4>Change Your Password</h4>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(m => m.NewAddress, new { @class = "col-md-2 control-label" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.NewAddress, new { @class = "form-control", id = "newAddress", required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                        <input id="changeAddressBtn" type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
